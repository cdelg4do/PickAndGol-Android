<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/profile_header"
              android:layout_width="match_parent"
              android:layout_height="192dp"
              android:background="@drawable/drawer_profile_background"
              android:gravity="bottom"
              android:orientation="vertical"
              android:padding="16dp"
              android:theme="@style/ThemeOverlay.AppCompat.Dark"
              android:clickable="true">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_profile_image"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_avatar"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="1dp"/>

    <TextView
        android:id="@+id/drawer_profile_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        android:text="@string/navigation_drawer_header_username_text"/>

    <TextView
        android:id="@+id/drawer_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="to Pick And Gol"/>

</LinearLayout>