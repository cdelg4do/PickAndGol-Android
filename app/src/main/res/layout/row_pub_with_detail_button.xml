<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/first_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/pub_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            tools:src="@drawable/default_placeholder"/>

        <TextView
            android:id="@+id/pub_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/pub_image"
            android:layout_toRightOf="@+id/pub_image"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:textSize="19sp"
            android:gravity="center_vertical|center_horizontal"
            tools:text="Ejemplo de nombre de pub un poco largo"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/second_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_row"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/pub_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="View Pub Detail"/>

    </RelativeLayout>

</RelativeLayout>